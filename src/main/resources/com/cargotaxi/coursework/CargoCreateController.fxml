<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="480.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cargotaxi.coursework.CargoCreateController">
    <children>
        <Button layoutX="340.0" layoutY="411.0" mnemonicParsing="false" onAction="#saveToList" prefHeight="43.0" prefWidth="150.0" text="Save">
            <font>
                <Font name="Verdana" size="15.0" />
            </font>
        </Button>
        <Button layoutX="110.0" layoutY="411.0" mnemonicParsing="false" onAction="#switchToCargo" prefHeight="43.0" prefWidth="150.0" text="Back">
            <font>
                <Font name="Verdana" size="15.0" />
            </font>
        </Button>
        <Label layoutX="249.0" layoutY="26.0" text="Creation">
            <font>
                <Font name="Verdana" size="24.0" />
            </font>
        </Label>
        <Text layoutX="96.0" layoutY="107.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Cargo name">
            <font>
                <Font name="Verdana" size="18.0" />
            </font>
        </Text>
        <Text layoutX="114.0" layoutY="153.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Pick up">
            <font>
                <Font name="Verdana" size="18.0" />
            </font>
        </Text>
        <Text layoutX="110.0" layoutY="198.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Drop off">
            <font>
                <Font name="Verdana" size="18.0" />
            </font>
        </Text>
        <TextField fx:id="cargoName" layoutX="270.0" layoutY="88.0" prefHeight="25.0" prefWidth="235.0" />
        <TextField fx:id="dropOff" layoutX="270.0" layoutY="179.0" prefHeight="25.0" prefWidth="235.0" promptText="City, Street, 123(street number)" />
        <TextField fx:id="pickUp" layoutX="270.0" layoutY="133.0" prefHeight="25.0" prefWidth="235.0" promptText="City, Street, 123(street number)" />
      <Text layoutX="114.0" layoutY="247.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Weight">
         <font>
            <Font name="Verdana" size="18.0" />
         </font>
      </Text>
      <TextField fx:id="weight" layoutX="270.0" layoutY="228.0" onKeyTyped="#updatePrice" prefHeight="25.0" prefWidth="235.0" promptText="361" />
      <Text layoutX="124.0" layoutY="290.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Price">
         <font>
            <Font name="Verdana" size="18.0" />
         </font>
      </Text>
      <Text fx:id="priceText" layoutX="270.0" layoutY="291.0" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" wrappingWidth="235.0">
         <font>
            <Font name="Verdana" size="18.0" />
         </font>
      </Text>
      <Text layoutX="88.0" layoutY="333.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Appointment">
         <font>
            <Font name="Verdana" size="18.0" />
         </font>
      </Text>
      <DatePicker fx:id="appointment" layoutX="270.0" layoutY="314.0" prefHeight="25.0" prefWidth="235.0" />
      <Text layoutX="84.0" layoutY="376.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Delivery date">
         <font>
            <Font name="Verdana" size="18.0" />
         </font>
      </Text>
      <Text fx:id="deliveryDate" layoutX="270.0" layoutY="377.0" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" wrappingWidth="235.0">
         <font>
            <Font name="Verdana" size="18.0" />
         </font>
      </Text>
    </children>
</AnchorPane>
