<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="480.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cargotaxi.coursework.CargoCreateController">
    <children>
        <Button layoutX="340.0" layoutY="403.0" mnemonicParsing="false" onAction="#saveToList" prefHeight="43.0" prefWidth="150.0" text="Save">
            <font>
                <Font name="Verdana" size="15.0" />
            </font>
        </Button>
        <Button layoutX="110.0" layoutY="403.0" mnemonicParsing="false" onAction="#switchToCargo" prefHeight="43.0" prefWidth="150.0" text="Back">
            <font>
                <Font name="Verdana" size="15.0" />
            </font>
        </Button>
        <Label layoutX="249.0" layoutY="33.0" text="Creation">
            <font>
                <Font name="Verdana" size="24.0" />
            </font>
        </Label>
        <Text layoutX="94.0" layoutY="130.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Cargo name">
            <font>
                <Font name="Verdana" size="18.0" />
            </font>
        </Text>
        <Text layoutX="116.0" layoutY="187.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Pick up">
            <font>
                <Font name="Verdana" size="18.0" />
            </font>
        </Text>
        <Text layoutX="112.0" layoutY="243.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Drop off">
            <font>
                <Font name="Verdana" size="18.0" />
            </font>
        </Text>
        <TextField fx:id="cargoName" layoutX="272.0" layoutY="111.0" prefHeight="25.0" prefWidth="235.0" />
        <TextField fx:id="dropOff" layoutX="272.0" layoutY="224.0" prefHeight="25.0" prefWidth="235.0" promptText="City, Street, 123(street number)" />
        <TextField fx:id="pickUp" layoutX="272.0" layoutY="168.0" prefHeight="25.0" prefWidth="235.0" promptText="City, Street, 123(street number)" />
      <Text layoutX="116.0" layoutY="298.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Weight">
         <font>
            <Font name="Verdana" size="18.0" />
         </font>
      </Text>
      <TextField fx:id="weight" layoutX="272.0" layoutY="279.0" onKeyTyped="#updatePrice" prefHeight="25.0" prefWidth="235.0" promptText="361" />
      <Text layoutX="127.0" layoutY="352.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Price">
         <font>
            <Font name="Verdana" size="18.0" />
         </font>
      </Text>
      <Text fx:id="priceText" layoutX="272.0" layoutY="350.0" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" wrappingWidth="235.0">
         <font>
            <Font name="Verdana" size="18.0" />
         </font>
      </Text>
    </children>
</AnchorPane>
